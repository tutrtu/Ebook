@model EbookWEB.Models.AuthorDto

<h1>Update Author</h1>
<form method="post" asp-action="Edit" asp-controller="Author" class="mt-5">
    <div class="mb-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="AuthorId" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>
    <div class="mb-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <div class="mb-3">
        <label class="form-label">State</label>
        <input type="text" class="form-control" asp-for="State" />
    </div>
    <div class="mb-3">
        <label class="form-label">Zip</label>
        <input type="text" class="form-control" asp-for="Zip" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="text" class="form-control" asp-for="EmailAddress" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" class="btn btn-danger" formaction="/Author/Delete/@Model.AuthorId">Delete</button>
</form>
